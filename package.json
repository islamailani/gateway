  "dependencies": {
    "bcrypt": "^1.0.2",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-jwt": "^3.2.1",
    "koa-logger": "^2.0.1",
    "koa-router": "next",
    "pg": "^6.1.5"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
